<?xml version="1.0" encoding="UTF-8" ?>
<application id="translationadmin/theme">
  <container type="separatorContainer" width="max" height="max" mode="vertical" auto="yes">

    <zone id="filtercontainer" size="80">
      <element type="htmlElement" ><![CDATA[

<div style="padding: 10px;">
  <button class="button reload" style="float: right;" onclick="translationadmin_theme_reload();">##reload##</button>
  <button class="button insert" style="float: right;" onclick="translationadmin_theme_go('', 1);">##insertnew##</button>
  <b>##title##</b><br />
  ##hint##<br />

  <button class="button insert" style="float: right;" onclick="translationadmin_theme_cleansearch();">##cleanfilter##</button>
  ##searchtitle## <input id="translationadmin/theme|single|search" type="text" value="{{SEARCHFILTER}}">
  <button class="button insert" onclick="translationadmin_theme_setsearch();">##searchbutton##</button>

</div>

      ]]></element>
    </zone>
    <zone id="themecontainer" size="*">
      <container type="gridContainer" id="themedata" width="max" height="max" haslistener="yes" classname="grid colored">
        <zone type="column" size="70" field="clave" title="##key##" sortable="yes">
        </zone>
        <zone type="column" size="300" field="nombre" title="##name##" sortable="yes">
        </zone>
        <zone type="column" size="100" field="source" title="##source##">
        </zone>
        <zone type="column" size="300" field="config" title="##config##">
        </zone>
        <zone type="column" size="250" field="commands" title="##commands##">
        </zone>

        <event type="click">
          <code><![CDATA[
function(data)
{
  if (!data || !data.data)
    return;

  translationadmin_theme_go(data.data.key, 4);
}
          ]]></code>
        </event>

      </container>
    </zone>

  </container>

  <element type="codeElement"><![CDATA[

function translationadmin_theme_reload()
{
  WA.$N('translationadmin/theme|single|themedata').reload();
}

function translationadmin_theme_setsearch()
{
  var checked = WA.toDOM("translationadmin/theme|single|showall").checked;
  var filter = WA.toDOM("translationadmin/theme|single|search").value;
  var request = WA.Managers.ajax.createRequest('/translationadmin/theme/filter/json', 'POST', null, translationadmin_theme_getfilter, false);
  request.addParameter('checked', checked);
  request.addParameter('filter', filter);
  request.send();
}

function translationadmin_theme_cleansearch()
{
  WA.toDOM("translationadmin/theme|single|showall").checked = false;
  WA.toDOM("translationadmin/theme|single|search").value = "";
  translationadmin_theme_setsearch();
}

function translationadmin_theme_getfilter(request)
{
  translationadmin_theme_reload();
}

function translationadmin_theme_go(key, mode)
{
  // open app to edit
  var node = WA.$N('index|single|app_translationadmin/theme/editor_'+(key?key:'new'));
  if (!node)
  {
    var tree = {tag:'zone',attributes:{id:'app_translationadmin/theme/editor_'+(key?key:'new'),title:'##themetitle## - ' + (key?key:'##newtheme##'),closeable:'yes',application:'translationadmin/theme/editor|'+(key?key:'new'),params:'mode='+mode+(key?'&Key='+key:'')}};
    WA.$N('index|single|application').app.createTree('application', tree);
  }
  else
  {
    n = WA.$N('translationadmin/theme/editor|'+(key?key:'new')+'|formtheme');
    if (n && mode == 1)
      n.doInsert();
    else if (n && mode == 2)
      n.doUpdate();
    else if (n && mode == 3)
      n.doDelete();
    else if (n && mode == 4)
      n.doView();
  }
  WA.$N('index|single|application').activateZone('app_translationadmin/theme/editor_'+(key?key:'new'));
}

]]></element>

</application>
